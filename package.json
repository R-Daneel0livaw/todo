{
  "name": "awesome-dev-journal",
  "version": "1.0.0",
  "description": "AI-powered bullet journal with MCP integration and VM orchestration",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:electron": "npm run dev --workspace=packages/electron-app",
    "build:electron": "npm run build --workspace=packages/electron-app",
    "dev:journal-mcp": "npm run dev --workspace=packages/journal-mcp",
    "build:all": "npm run build --workspaces --if-present",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
