{
  "name": "@awesome-dev-journal/journal-mcp",
  "version": "1.0.0",
  "description": "Journal MCP Server - Core bullet journal logic with MCP and HTTP interfaces",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:mcp": "tsx src/index.ts mcp",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:mcp": "node dist/index.js mcp",
    "typecheck": "tsc --noEmit",
    "seed": "tsx src/scripts/seed-test-data.ts",
    "db:clear": "tsx src/scripts/seed-test-data.ts clear",
    "db:seed": "tsx src/scripts/seed-test-data.ts seed",
    "db:reset": "tsx src/scripts/seed-test-data.ts reset"
  },
  "dependencies": {
    "@awesome-dev-journal/shared": "^1.0.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "better-sqlite3": "^11.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^18.19.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
